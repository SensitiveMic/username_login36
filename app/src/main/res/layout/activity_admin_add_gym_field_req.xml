<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content (with toolbar + input fields) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Scrollable content below the toolbar -->
        <ScrollView
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gym Entity: " />

             <EditText
                    android:id="@+id/editTextGym_Decrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Description of the Gym"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:maxLines="10"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:gravity="top|start" />

                <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gym Name"
                    android:inputType="text"
                    android:textColor="@color/black" />

              <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gym Contact Number"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/addOCtimebutton"
                    android:text="Opening/Closing time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextGym_Opening_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Opening time"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <TextView
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Closing_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Opening time"
                    android:layout_weight="1"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textColor="@color/black" />
            </LinearLayout>



                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gym Owner Account: " />

                <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Owner_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black" />

                <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Owner_Lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black" />

                <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Owner_EmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black" />
             <!--   <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Owner_Mobile_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/black" />  -->

                <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Owner_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

                <EditText
                    android:padding="15dp"
                    android:id="@+id/editTextGym_Owner_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gym_Owner Username"
                    android:inputType="text"
                    android:textColor="@color/black" />

                <Button
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/button_add_gym_entity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed to Add Gym Entity" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin_ADD_GYM_Field_Req"
                    android:alpha="0.5"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/navdrawer_admin"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
