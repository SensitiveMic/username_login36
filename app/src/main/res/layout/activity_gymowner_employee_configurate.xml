<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Gym_Owner.employeelist.Gymowner_employee_configurate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/drawer_border"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/go_back"
                android:layout_width="61dp"
                android:layout_height="50dp"

                app:srcCompat="@drawable/arrow_back"
                />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="131dp"
                android:layout_height="28dp"
                android:text="Gym Entity: "
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/editTextGym_name"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:hint="Gym_Name"
                android:inputType="text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editTextGym_Decrp"
                android:layout_width="388dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@null"
                android:gravity="top|start"
                android:hint="Enter Description of the Gym"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="15"
                android:minLines="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="133dp"
                android:layout_height="30dp"
                android:text="Gym Owner Account: "
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/editTextGym_Owner_Username"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/black"
                android:hint="Gym_Owner Username"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextGym_Owner_Password"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textVisiblePassword" />

            <EditText
                android:id="@+id/editTextGym_Owner_EmailAddress"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:layout_margin="8dp"
                />

            <Button
                android:id="@+id/button_chg"
                android:layout_width="178dp"
                android:layout_height="50dp"
                android:text="Confirm change"
                android:layout_weight="1"
                android:layout_margin="8dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>