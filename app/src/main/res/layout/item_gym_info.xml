<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGymName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gym Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#2E7D32" />

        <TextView
            android:id="@+id/tvGymDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gym Description"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tvGymContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="14sp"
            android:textColor="#424242"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvGymOpening"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Opens: 6:00 AM"
                android:textSize="14sp"
                android:textColor="#1E88E5" />

            <TextView
                android:id="@+id/tvGymClosing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Closes: 10:00 PM"
                android:textSize="14sp"
                android:textColor="#D32F2F"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
