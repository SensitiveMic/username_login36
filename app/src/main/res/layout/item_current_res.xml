<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- DATE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/dbdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *date"
                android:textSize="18sp"
             />
        </LinearLayout>

        <!-- USER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User:"
                android:textSize="18sp"
                android:textStyle="bold"
               />

            <TextView
                android:id="@+id/dbuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *user"
                android:textSize="18sp"
             />

            <TextView
                android:id="@+id/dbresid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- GYM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym Reserved:"
                android:textSize="18sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/dbgym_named"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  *gym name"
                android:textSize="18sp"
              />

            <TextView
                android:id="@+id/dbgym_num"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- DELETE BUTTON -->
        <ImageView
            android:id="@+id/trashcandelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:contentDescription="Delete"
            android:padding="4dp"
            app:srcCompat="@drawable/trashcan_delete"
            app:tint="@android:color/holo_red_dark" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
